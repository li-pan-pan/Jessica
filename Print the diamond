#include<stdio.h>
void print(int i, int n)
{
	while (i >= 0)
	{
		printf(" ");
		--i;
	}
	while (n > 0)
	{
		printf("*");
		--n;
	}
	printf("\n");
}
int main()
{
	int i = 6, n = 1;
	while (i>=0)
	{
		print(i, n);
		--i;
		n += 2;
	}
	i = 1, n = 11;
	while (i<=6)
	{
		print(i, n);
		++i;
		n -= 2;
	}
	return 0;
}
