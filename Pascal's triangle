#include<iostream>
#include<algorithm>
using namespace std;
#define ll long long 
ll n,a[70][70],t;
int main()
{
	scanf("%lld",&n);
	a[0][0]=a[1][0]=a[1][1]=1;
	for(int i=2;i<23;i++){
		for(int j=0;j<=i;j++){
			a[i][j]=a[i-1][j]+a[i-1][j-1];
		}
	}
	for(int i=0;i<n;i++){
		for(int j=0;j<n-i-1;j++){
			printf("   ");
		}
		for(int j=0;j<=i;j++){
			if(j==0)
			printf("%d",a[i][j]);
			else
			printf("%6d",a[i][j]);
		}
		printf("\n");
	}
	return 0;
}
