#include<stdio.h>
int power(int n, int k)
{
	if (k == 0)
		return 1;
	else
		return n*power(n, k - 1);
}
int main()
{
	int a,n;
	printf("请输入a+aa+aaa+aaaa+....的a以及前n项的n\n");
	scanf("%d%d", &a, &n);
	int item = 0, sum = 0;
	for (int i = 0; i < n; ++i)
	{
		item += (power(10, i))*a;
		sum += item;
	}
	printf("%d\n", sum);
	return
